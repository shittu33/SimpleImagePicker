<resources>

    <style name="LightAppTheme" parent="GalleryLightTheme">
        <item name="android:windowBackground">@color/white_grey</item>
<!--        <item name="android:background">@color/white_grey</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
        <item name="toolbarStyle">@style/LightToolbarStyle</item>
    </style>

    <style name="DarkAppTheme" parent="GalleryDarkTheme">
<!--        <item name="android:popupMenuStyle">@style/MenuStyle</item>-->
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MenuStyle" parent="Widget.AppCompat.PopupWindow">
<!--        <item name="android:textColor">@android:color/black</item>-->
        <item name="android:windowBackground">@android:color/black</item>
