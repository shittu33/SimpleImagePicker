<resources>
<!--    <item name="android:background">@color/white</item>-->

    <style name="GalleryLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorStatusDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:imageButtonStyle">@style/LightImageButtonStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/LightToolbarStyle</item>
        <item name="actionModeStyle">@style/ActionModeBar</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="cardViewStyle">@style/LightCardViewBack</item>
        <item name="android:radioButtonStyle">@style/GalleryLightRadioButtonStyle</item>
    </style>


    <style name="GalleryDarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorStatusDark</item>
        <item name="colorPrimaryDark">@color/colorStatusDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cardViewStyle">@style/BlackCardViewBack</item>
        <item name="android:imageButtonStyle">@style/DarkImageButtonStyle</item>
        <item name="toolbarStyle">@style/DarkToolbarStyle</item>
        <item name="android:radioButtonStyle">@style/GalleryDarkRadioButtonStyle</item>
    </style>

    <style name="previewStyle">
        <item name="android:radioButtonStyle">@style/previewRadioButtonStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:imageButtonStyle">@style/LightImageButtonStyle</item>
    </style>

    <style name="LightImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="DarkImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LightCardViewBack" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="BlackCardViewBack" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorStatusDark</item>
    </style>
    <style name="previewRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GalleryLightRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_btn_selector</item>
<!--        <item name="android:textColor">@color/white</item>-->
    </style>

    <style name="GalleryDarkRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/dark_radio_btn_selector</item>
    </style>

    <style name="LightToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:background">@drawable/action_bar_draw</item>
        <item name="android:actionBarItemBackground">@color/white</item>
    </style>

    <style name="DarkToolbarStyle" parent="LightToolbarStyle">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="android:background">@drawable/action_bar_draw_dark</item>
        <item name="android:actionBarItemBackground">@android:color/black</item>
    </style>

    <style name="ActionModeBar" parent="Base.Widget.AppCompat.ActionMode">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="background">@drawable/action_bar_draw</item>
        <item name="android:actionBarSize">?attr/actionBarSize</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:actionBarItemBackground">@color/white</item>
    </style>
</resources>
